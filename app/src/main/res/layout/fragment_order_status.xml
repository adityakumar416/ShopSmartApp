<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".OrderStatusFragment">

    <RelativeLayout
        android:id="@+id/topview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="22dp">

        <ImageView
            android:id="@+id/back_icon"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/favorite_icons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order Details"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />


    </RelativeLayout>

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:background="@color/grey_400"
        android:layout_below="@id/topview"/>


    <TextView
        android:id="@+id/orderId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order ID - 52638267"
        android:textSize="16sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="8dp"
        android:layout_below="@id/line1"/>
    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_400"
        android:layout_below="@id/orderId"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@id/line2"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/orderedProductName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Black Tshirt"
            android:lines="2"
            android:textSize="18sp"
            android:layout_toStartOf="@id/ordered_product_image"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="8dp"/>

        <ImageView
            android:id="@+id/ordered_product_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="18dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/btn_grey_bg"
            android:padding="12dp"
            android:src="@drawable/item_1" />

        <TextView
            android:id="@+id/orderedProductPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/orderedProductName"
            android:text="$ 243"
            android:textSize="18sp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="12dp"/>

        <View
            android:id="@+id/line3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_400"
            android:layout_below="@id/orderedProductPrice"/>

    </RelativeLayout>


</RelativeLayout>